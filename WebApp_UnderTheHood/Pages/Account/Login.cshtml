@page
@model WebApp_UnderTheHood.Pages.Account.LoginModel
@{
}

<div class="container border" style="padding:20px">
    <form method="post">
        <div class="mb-3 row">
            <div class="col-2">
                <label asp-for="Credential.UserName"></label>
            </div>
            <div class="col-5">
                <input type="text" asp-for="Credential.UserName" class="form-control"/>
                <span asp-validation-for="Credential.UserName" class="text-danger"></span>
            </div>
            </div>
        <div class="mb-3 row">
            <div class="col-2">
                <label asp-for="Credential.Password"></label>
            </div>
            <div class="col-5">
                <input type="password" asp-for="Credential.Password" class="form-control" />
                <span asp-validation-for="Credential.Password" class="text-danger"></span>
            </div>
        </div>
        <div class="mb-3 check">
            <div class="col-2">
                <input type="checkbox"  class="form-check-input" asp-for="Credential.RememberMe" />
                <label class="form-check-label" asp-for="Credential.RememberMe"></label>
            </div>
            <div class="col-5">
            </div>
        </div>
        <div class="mb-3 row">
            <div class="col-2">
                <input type="submit" value="Login" class="btn btn-primary"/>
            </div>
            <div class="col-5">
            </div>
        </div>
    </form>

</div>